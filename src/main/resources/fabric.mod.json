{
  "schemaVersion": 1,
  "id": "mobpvp",
  "version": "${version}",
  "name": "MobPVP",
  "description": "MobPVP adds a level system to every mob. Stronger mobs drop better loot and may become minibosses.",
  "authors": ["KaplanBedwars"],
  "contact": {},
  "license": "AGPL-3.0",
  "icon": "assets/mobpvp/icon.png",
  "environment": "*",
  "entrypoints": {
    "fabric-datagen": [
      "com.kaplandev.client.mobpvpDataGenerator"
    ],
    "client": [
      "com.kaplandev.client.mobpvpClient",
      "com.kaplandev.client.keybind.Keybinds"
    ],
    "main": [
      "com.kaplandev.mobpvp"
    ],
    "modmenu": [
      "com.kaplandev.client.config.MobPvpModMenuIntegration"
    ]
  },
  "mixins": [
    "mobpvp.mixins.json",
    {
      "config": "mobpvp.client.mixins.json",
      "environment": "client"
    }
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "breaks": {
    "addon": "<=1.1"
  },
  "suggests": {
    "modmenu": "*"
  }
}
